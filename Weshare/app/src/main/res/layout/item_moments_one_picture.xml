<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHeadImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/gorgeous" />

    <TextView
        android:id="@+id/textViewNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewHeadImage"
        android:layout_alignTop="@id/imageViewHeadImage"
        android:layout_toEndOf="@id/imageViewHeadImage"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="泪殇_陌小薰"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNickName"
        android:layout_toRightOf="@id/imageViewHeadImage"
        android:layout_toLeftOf="@id/textViewTime"
        android:layout_toEndOf="@id/imageViewHeadImage"
        android:layout_toStartOf="@id/textViewTime"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="今天去了一家非常棒的游泳馆！"/>

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewHeadImage"
        android:layout_below="@id/textViewText"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/towgirl"/>

    <ImageView
        android:id="@+id/imageViewPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageViewPicture"
        android:layout_alignRight="@id/imageViewPicture"
        android:layout_alignTop="@+id/imageViewPicture"
        android:layout_alignBottom="@+id/imageViewPicture"
        android:src="@mipmap/pause"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewHeadImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="9:40"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>